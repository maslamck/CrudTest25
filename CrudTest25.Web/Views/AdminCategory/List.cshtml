@model List<CrudTest25.Web.Models.Domain.Category>
@{
}
<h3>
    List Categories
</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Display Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Any())
        {
            @foreach (var category in Model)
            {
                <tr>
                    @* <th scope="row">@tag.Id</th> *@
                    <td> @(((Int32)1) + @Model.IndexOf(category)) </td>
                    <td>@category.Name</td>
                    <td>@category.DisplayName</td>
                    <td><a class="link" asp-area="" asp-controller="AdminCategory" asp-action="Edit" asp-route-id="@category.Id">Edit</a></td>
                </tr>
            }

        }
        else
        {
            <tr><td colspan="4"><p>No tag found!</p></td></tr>
        }
    </tbody>

</table>